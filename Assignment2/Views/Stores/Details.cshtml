@model IEnumerable<Assignment2.Models.StoreInventory>

@{
    ViewData["Title"] = "Store Inventory";
}

<h2>Inventory List</h2>
<hr />
<div>
    <h4><strong>Store</strong> - @ViewData["StoreName"]</h4>

    <form asp-controller="Stores" asp-action="Details" asp-route-id="@ViewData["StoreID"]" method="get">
        <p>
            Title: <input type="text" name="SearchString">
            <input type="submit" value="Filter" />
        </p>
    </form>

    <table class="table">
        <thead>
            <tr>
                <th>
                    Product ID
                </th>
                <th>
                    Product Name
                </th>
                <th>
                    StockLevel
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Product.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StockLevel)
                    </td>
                    <td>
                        <a asp-action="AddCart" asp-route-id="@ViewData["StoreID"]" asp-route-productID="@item.ProductID">Add to Cart</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
