@model Assignment2.Models.StockRequest;

@{
    ViewData["Title"] = "Request";
}

<h2>Create New Request</h2>

<h4>Make Request</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="MakeRequest">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @*<input type="hidden" asp-for="StockRequestID" />*@
            <div class="form-group">
                <label asp-for="StoreID" class="control-label"></label>
                <input asp-for="StoreID" class="form-control" readonly="readonly" value=@ViewData["StoreID"] />
                @*<text asp-for="StoreID" class="form-control" />*@
                @*<select asp-for="StoreID" class="form-control" asp-items="ViewBag.StoreID"></select>*@
                <span asp-validation-for="StoreID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductID" class="control-label"></label>
                <input asp-for="ProductID" class="form-control" readonly="readonly" value=@ViewData["ProductID"]/>
                @*<select asp-for="ProductID" class="form-control" asp-items="ViewBag.ProductID"></select>*@
                <span asp-validation-for="ProductID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
